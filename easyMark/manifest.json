{
    "name": "Easy Mark",
    "description": "mart current page of Simple & fast",
    "version": "0.1",
    "manifest_version": 3,
    "permissions": ["storage", "tabs", "activeTab", "unlimitedStorage"],
    "host_permissions": ["<all_urls>"],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "clear": {
            "suggested_key": {
              "default": "Ctrl+Shift+0"
            },
            "description": "clear",
            "global": true
        },
        "mark1": {
            "suggested_key": {
              "default": "Ctrl+Shift+9"
            },
            "description": "mark red",
            "global": true
        },
        "mark2": {
            "suggested_key": {
              "default": "Ctrl+Shift+8"
            },
            "description": "mark green",
            "global": true
        },
        "mark3": {
            "suggested_key": {
              "default": "Ctrl+Shift+7"
            },
            "description": "mark blue",
            "global": true
        }
        

    }
  }